generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  role_id  String
  role     Role   @relation(fields: [role_id], references: [id])
}

model Role {
  id          String       @id @default(uuid())
  name        String
  permissions Permission[]
  users       User[]
}

model Permission {
  id      String @id @default(uuid())
  action  String
  subject String
  role_id String
  role    Role   @relation(fields: [role_id], references: [id])
}
